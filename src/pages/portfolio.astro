    <div class="flex flex-col gap-8 pt-8">
      <div class="flex flex-row gap-8 items-center">
        <h3 class="text-2xl font-semibold dark:text-gray-200">Designs</h3>
        <hr class="border-gray-50 w-full dark:border-gray-700" />
      </div>

      <ul class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-4 pb-12">
        {
          portfolio.map((item) => {
            return <PortfolioItem item={item} />;
