---
import { Icon } from "astro-icon";

import { SITE, CONTACT } from "@config";

import Layout from "~/layouts/PageLayout.astro";
import ContactForm from "~/components/widgets/ContactForm.astro";

const title = `Contact - ${SITE.name}`;
const description = "Contact Joshua Booth";
---

<Layout meta={{ title, description }}>
  <main class="container max-w-4xl mx-auto px-8 mb-8">
    <h1 class="text-3xl font-semibold mt-12 mb-4 dark:text-gray-100">
      Contact
    </h1>
    <p class="mb-8 dark:text-gray-200">
      Wish to contact me? Enter your details and a short message and Iâ€™ll get
      back to you!
    </p>
    <div class="flex flex-col gap-12 mb-32 md:flex-row lg:gap-20">
      <ContactForm />

      <div class="flex flex-col gap-6">
        <div class="flex flex-col gap-2">
          <a
            href={`tel:${CONTACT.phone.raw}`}
            class="p-2 rounded dark:hover:bg-white"
          >
            <div class="flex gap-4 items-center">
              <Icon name="prime:phone" class="w-9 h-9" />
              <p>{CONTACT.phone.formatted}</p>
            </div>
          </a>
          <a
            href={`mailto:${CONTACT.email}`}
            class="p-2 pr-3.5 rounded dark:hover:bg-white"
          >
            <div class="flex gap-4 items-center">
              <Icon name="prime:at" class="w-9 h-9" />
              <p>{CONTACT.email}</p>
            </div>
          </a>
        </div>

        <!-- <div class="flex flex-col gap-4 pt-4">
          <p class="font-semibold dark:text-gray-100/80">Keep in touch</p>
          <div class="flex gap-7">
            <a href="" class=""><Icon name="ci:linkedin" class="w-9 h-9" /></a>
            <a href="" class=""><Icon name="ci:instagram" class="w-9 h-9" /></a>
            <a href="" class=""><Icon name="ci:github" class="w-9 h-9" /></a>
            <a href="" class=""><Icon name="ci:twitter" class="w-9 h-9" /></a>
          </div>
        </div> -->
      </div>
    </div>
  </main>
</Layout>
