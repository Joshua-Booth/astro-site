---
import { links } from "@/config";
import { SiGithub, SiInstagram, SiX } from "@icons-pack/react-simple-icons";
import {
  Card,
  Container,
  Flex,
  Heading,
  Link,
  Separator,
  Text,
} from "@radix-ui/themes";
import { MailIcon } from "lucide-react";

import ContactForm from "@/components/shared/ContactForm.astro";

import BaseLayout from "../layouts/BaseLayout.astro";

const pageTitle = "Contact | Joshua Booth";
---

<BaseLayout title={pageTitle}>
  <Container size="3" p="6">
    <Flex
      direction={{ initial: "column", sm: "row" }}
      gap="8"
      align="start"
      pt="8"
    >
      <Flex direction="column" gap="8" width="100%" style={{ flex: "1 1 50%" }}>
        <Flex direction="column" gap="4">
          <Heading size="8" weight="bold">Let's talk</Heading>
          <Text size="2" color="gray">
            Have a question or want to work together? I'd love to hear from you.
            Fill out the form and I'll get back to you as soon as possible.
          </Text>
        </Flex>

        <Separator size="3" />

        <Flex gap="6">
          <Link href={links.instagram}>
            <SiInstagram size={16} />
          </Link>
          <Link href={links.x}>
            <SiX size={16} />
          </Link>
          <Link href={links.github}>
            <SiGithub size={16} />
          </Link>
          <Link href={links.email}>
            <span class="sr-only">Email</span>
            <MailIcon size={16} />
          </Link>
        </Flex>
      </Flex>

      <Flex direction="column" gap="4" width="100%" style={{ flex: "1 1 50%" }}>
        <Card size="3">
          <ContactForm />
        </Card>
      </Flex>
    </Flex>
  </Container>
</BaseLayout>

