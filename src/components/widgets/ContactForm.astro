---
import { SITE } from "@config";
---

<form
  method="POST"
  action={`https://formspree.io/${SITE.formspreeID}`}
  class="flex flex-col gap-4 w-full max-w-full md:max-w-sm"
>
  <div class="flex flex-col">
    <label for="name">Name</label>
    <input
      type="text"
      class="w-full h-12 border border-gray-200 rounded px-3 py-1.5 outline-blue-500 dark:bg-gray-800 dark:border-gray-500 dark:text-gray-200"
      placeholder="Name"
      name="name"
      id="name"
    />
  </div>
  <div class="flex flex-col">
    <label for="email">Email</label>
    <input
      type="email"
      class="w-full h-12 border border-gray-200 rounded px-3 py-1.5s outline-blue-500 dark:bg-gray-800 dark:border-gray-500 dark:text-gray-200"
      placeholder="Email"
      name="email"
      id="email"
    />
  </div>
  <div class="flex flex-col max-h-72">
    <label for="message">Message</label>
    <textarea
      name="message"
      id="message"
      class="w-full h-40 border border-gray-200 rounded px-3 py-3 outline-blue-500 min-h-[100px] dark:bg-gray-800 dark:border-gray-500 dark:text-gray-200"
      placeholder="Type Your Message Here"
      rows="5"></textarea>
  </div>

  <button
    class="btn w-full text-white font-medium bg-blue-600 py-2 shadow shadow-blue-400 hover:bg-blue-800 sm:mb-0 dark:shadow-none"
    type="submit"
  >
    Send
  </button>
</form>
